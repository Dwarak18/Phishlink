# Environment Variables for PhishShield
# Copy this to .env and customize for your deployment

# Server Configuration
PORT=8000
HOST=0.0.0.0
DEBUG=false
RELOAD=false

# Database Configuration
DATABASE_PATH=./phishshield.db

# CORS Settings (add your extension URLs)
CORS_ORIGINS=chrome-extension://*,moz-extension://*,ms-browser-extension://*,http://localhost:3000

# OAuth Configuration (Optional)
# Google OAuth for Gmail integration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Microsoft OAuth for Outlook integration  
MICROSOFT_CLIENT_ID=your_microsoft_client_id_here
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret_here
MICROSOFT_TENANT_ID=common

# Security Settings
SECRET_KEY=your_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=phishshield.log

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Analysis Settings
MAX_EMAIL_SIZE_MB=25
MAX_LINKS_PER_EMAIL=50
ANALYSIS_TIMEOUT_SECONDS=30

# Redis Configuration (Optional - for production caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# PostgreSQL Configuration (Optional - for production database)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=phishshield
POSTGRES_USER=phishshield
POSTGRES_PASSWORD=secure_password_change_me