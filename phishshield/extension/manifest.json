{
  "manifest_version": 3,
  "name": "PhishShield - Email Security Scanner",
  "version": "1.0.0",
  "description": "Advanced phishing detection for Gmail and Outlook - protects you from malicious emails with real-time analysis",
  
  "permissions": [
    "activeTab",
    "storage",
    "background",
    "identity",
    "https://www.googleapis.com/",
    "https://graph.microsoft.com/"
  ],
  
  "host_permissions": [
    "https://mail.google.com/*",
    "https://outlook.live.com/*",
    "https://outlook.office.com/*",
    "https://outlook.office365.com/*",
    "http://localhost:8000/*",
    "https://your-phishshield-api.com/*"
  ],
  
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*"
      ],
      "js": ["src/contentScripts/gmail-content.js"],
      "css": ["src/styles/content.css"],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://outlook.live.com/*",
        "https://outlook.office.com/*",
        "https://outlook.office365.com/*"
      ],
      "js": ["src/contentScripts/outlook-content.js"],
      "css": ["src/styles/content.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "PhishShield - Check Email Security",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "options_page": "src/options.html",
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "src/styles/content.css",
        "icons/*"
      ],
      "matches": [
        "https://mail.google.com/*",
        "https://outlook.live.com/*",
        "https://outlook.office.com/*",
        "https://outlook.office365.com/*"
      ]
    }
  ],
  
  "oauth2": {
    "client_id": "YOUR_GMAIL_CLIENT_ID.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/gmail.readonly",
      "https://www.googleapis.com/auth/userinfo.email"
    ]
  }
}